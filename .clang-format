BasedOnStyle: LLVM
UseTab: Never
IndentWidth: 4
TabWidth: 4
AllowShortIfStatementsOnASingleLine: false
IndentCaseLabels: false
ColumnLimit: 120
AccessModifierOffset: -4
AlignAfterOpenBracket:	Align

IncludeCategories:
  - Regex:    '^<[^.]*>'
    Priority: -1
  - Regex:    '<.*\.h>'
    Priority: 1
  - Regex:    '".*\.(c|h)pp"'
    Priority: 2